---
import type { BannerBlock as BannerProps } from "@/lib/payloadTypes";
import RichText from "@/components/RichText.astro";
import { cn } from "@/utils/ui";

const { style, content } = Astro.props as BannerProps;
---

<div class={cn("mx-auto mt-12 mb-8 max-w-2xl md:text-left")}>
    <div
        class={cn("flex items-center rounded border px-6 py-6", {
            "border-primary dark:border-[#7c9ac6] bg-green-light dark:bg-blue-900 border-4":
                style === "info",
            "border-error bg-error/30": style === "error",
            "border-success bg-success/30": style === "success",
            "border-warning bg-warning/30": style === "warning",
        })}
    >
        <RichText
            content={content}
            className="banner [&>p]:dark:!text-[#d1e3fd]"
        />
    </div>
</div>
