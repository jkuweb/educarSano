---
import { Image } from "@unpic/astro";

interface Props {
    src: string;
    alt?: string;
    width?: number;
    height?: number;
    className?: string;
    loading?: "lazy" | "eager";
    layout?: "constrained" | "fullWidth" | "fixed";
    priority?: boolean;
    background?: string;
    mimeType?: string;
}

const {
    src,
    alt = "",
    width,
    height,
    className = "",
    loading = "lazy",
    layout = "constrained",
    priority = false,
    background,
    mimeType,
    ...rest
} = Astro.props;

// Detecta si es SVG por la extensi√≥n de la URL
const isSvgFile =
    mimeType === "image/svg+xml" ||
    src?.endsWith(".svg") ||
    src?.includes(".svg?");

let svgContent = "";

// Si es SVG, hace fetch del contenido para renderizarlo inline
if (isSvgFile && src) {
    try {
        const response = await fetch(src);
        if (response.ok) {
            svgContent = await response.text();
        }
    } catch (error) {
        console.error("Error cargando SVG:", error);
    }
}
---

{
    svgContent ? (
        <div class={className} set:html={svgContent} {...rest} />
    ) : (
        <Image
            src={src}
            alt={alt}
            width={width}
            height={height}
            class={className}
            loading={loading}
            layout={layout}
            priority={priority}
            background={background}
            {...rest}
        />
    )
}
